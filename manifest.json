{
  "manifest_version": 3,
  "name": "Text Injector",
  "version": "1.0",
  "description": "Inject pre/post prompts with main and alt hotkeys",
  "permissions": ["scripting", "activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Text Injector"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "inject-leader-main": {
      "description": "Leader (main)"
    },
    "inject-trailer-main": {
      "description": "Trailer (main)"
    },
    "inject-leader-alt": {
      "description": "Leader (alt)"
    },
    "inject-trailer-alt": {
      "description": "Trailer (alt)"
    }
  }
}
