{
  "manifest_version": 3,
  "name": "Text Injector",
  "version": "1.0",
  "description": "Inject pre/post prompts with main and alt hotkeys",
  "permissions": ["scripting", "activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },

  
"commands": {
  "inject-leader-main": {
    "suggested_key": {
      "default": "Ctrl+8"
    },
    "description": "Leader (main)"
  },
  "inject-trailer-main": {
    "suggested_key": {
      "default": "Ctrl+9"
    },
    "description": "Trailer (main)"
  },
  "inject-leader-alt": {
    "suggested_key": {
      "default": "Ctrl+Shift+8"
    },
    "description": "Leader (alt)"
  },
  "inject-trailer-alt": {
    "suggested_key": {
      "default": "Ctrl+Shift+9"
    },
    "description": "Trailer (alt)"
  }
}





}
