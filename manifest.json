{
  "manifest_version": 3,
  "name": "Text Injector",
  "version": "1.0",
  "description": "Inject pre/post prompts with main and alt hotkeys",
  "permissions": ["scripting", "activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },

  
"commands": {
  "inject-leader-main": {
    "suggested_key": {
      "default": "Ctrl+Alt+["
    },
    "description": "Inject leader (main)"
  },
  "inject-trailer-main": {
    "suggested_key": {
      "default": "Ctrl+Alt+]"
    },
    "description": "Inject trailer (main)"
  },
  "inject-leader-alt": {
    "suggested_key": {
      "default": "Ctrl+Shift+["
    },
    "description": "Inject leader (alt)"
  },
  "inject-trailer-alt": {
    "suggested_key": {
      "default": "Ctrl+Shift+]"
    },
    "description": "Inject trailer (alt)"
  }
}





}
